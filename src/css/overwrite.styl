// Colours
border-color = #AEB9BD
background-color = #E8EBEF
faded-text = #999

* 
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

body
  padding-top: 36px
  background: url('../img/wood.png')
  color: #666
  text-shadow: 0 1px 1px rgba(255, 255, 255, 0.5)
  font-size: 13px
  overflow: hidden

ul, ol
  padding: 0
  margin: 0

li
  list-style-type: none

form
  margin: 0

input, textarea
  font-family: Lato, Helvetica, sans-serif
  font-size: 13px
  color: #333
  padding: 1px 5px
  border: 1px solid #AEB9BD
  radius(3px)
  box-shadow(inset 0 1px 4px rgba(0, 0, 0, 0.2))

.avatar
  height: 26px
  width: 26px
  radius(3px)
  box-shadow(0 1px 3px rgba(0,0,0,.4))
  margin-right: 4px

.chatapp
  width: 210px
  position: fixed
  top: 37px
  bottom: 0
  //right: -220px
  right: 0
  background: background-color
  border-left: 1px solid border-color
  vertical-align: top
  .users
    overflow: auto
    li
      padding: 2px 6px
      cursor: pointer
      font-size: 13px
      &:hover
        background: lightGrey
      .name
        display: inline-block
        width: 150px
        ellipsis()
  header
    vertical-gradient(#fcfcfc, #dedede)
    border-bottom: 1px solid border-color
    margin-bottom: 2px
    padding: 5px
    .searchbox
      width: 100%
      padding: 1px 21px 1px 19px
      font-size: 13px
      radius 13px
    .search-icon
      position: absolute
      color: #888
      top: 4px
      left: 9px
      font-size: 28px
      font-family: "entypoRegular" !important
      font-weight: 300 !important
    .searchclear
      display: none
      position: absolute
      right: 11px
      top: 5px
      font-size: 26px
      color: #b6b6b6
      cursor: pointer
      &:hover
        color: #888
  .online-status
    width: 11px
    height: 11px
    float: right
    margin-top: 6px

.chat-windows
  position: absolute
  bottom: 6px
  right: 210px

.chat-window
  margin-right: 5px
  background: rgba(0, 0, 0, .6)
  radius(3px)
  box-shadow 0 0 3px rgba(0,0,0,.3), 0 2px 4px rgba(0,0,0,.3)
  width: 250px
  float: right
  .chatview
    position: relative
    height: 380px
    > header
      padding: 3px 6px 2px
      vertical-gradient(#fcfcfc, #dedede)
      radius(3px 3px 0 0)
      border-bottom: 1px solid border-color
      cursor: pointer
    .unreadMsg
      display: none
      margin-left: 3px
    footer
      position: absolute
      bottom: 0
      left: 0
      right: 0
      padding: 5px
      border-top: 1px solid border-color
      vertical-gradient(#fcfcfc, #dedede)
      radius(0 0 3px 3px)
    .messages
      overflow: auto
      height: 323px
    .msg
      background: white
      padding: 3px
      margin: 3px
      radius(3px)
      .avatar
        float: left
      .time
        float: right
        line-height: 13px
        font-size: 11px
        color: faded-text
      .from
        margin: 0 0 2px 0
        line-height: 14px
        font-weight: bold
        font-size: 12px
        width: 178px
        ellipsis()
      li
        margin: 0 0 2px 30px
        line-height: 14px
        &:last-child
          margin-bottom: 0
    .prompt
      width: 100%

.chat-window.folded
  .messages, footer
    display: none
  header
    radius(3px)
